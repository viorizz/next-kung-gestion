// schema.prisma
datasource db {
  provider = "postgresql"  // Or your database provider
  url      = env("https://zstbaxkwhstnbjcqmkpd.supabase.co || NEXT_PUBLIC_SUPABASE_URL")
}

model PdfTemplate {
  id          String   @id @default(uuid())
  manufacturer String
  productType String
  pdfUrl      String?  @db.Text // Allow null PDF URLs
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String // Store the ID of the user who uploaded the template
  @@index([userId])
}